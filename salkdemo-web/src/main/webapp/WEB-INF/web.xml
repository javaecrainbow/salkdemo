<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.5//EN"
 "http://java.sun.com/dtd/web-app_2_5.dtd" >

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>salkdemo Web Application</display-name>
		<!-- spring bean 初始化的参数 -->
			<context-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/context/spring/application.xml</param-value>
		</context-param>
		<!-- log4j 初始化的参数 -->
		<context-param>
			<param-name>logbackconConfigLocation</param-name>
			<param-value>classpath:/context/log/log4j.xml</param-value>
		</context-param>
	<listener> 
	<listener-class>com.salk.legacy.web.listener.LockBackConfigListener</listener-class> 
	</listener>
	<listener>
		<listener-class>com.salk.legacy.web.listener.SystemContextLoaderListener</listener-class>
	 </listener>
	 <listener> 
	<listener-class>com.salk.legacy.web.listener.SystemConfigListener</listener-class> 
	</listener>
	 <!-- 它是一个在web应用关闭的时候,清除JavaBeans Introspector的监听器 -->
	 <listener> 
	<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class> 
	</listener>
	 <filter>
	 <filter-name>encoding-filter</filter-name>
	 <filter-class>org.springframework.web.filter.CharacterEncodingFilter </filter-class>
	 <init-param>
	 	<param-name>encoding</param-name>
	 	<param-value>UTF-8</param-value>
	 </init-param>
	 </filter>
	 <filter-mapping>
	 	<filter-name>encoding-filter</filter-name>
	 	<url-pattern>/*</url-pattern>
	 </filter-mapping>
	 
	 <filter>
	 	<filter-name>UrlRewriteFilter</filter-name>
	 	<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
	 </filter>
	 <filter-mapping>
	 	<filter-name>UrlRewriteFilter</filter-name>
	 	<servlet-name>salkdemo-servlet</servlet-name>
	 </filter-mapping>
	<servlet>
		<servlet-name>salkdemo-servlet</servlet-name>
		<servlet-class>com.salk.salkdemo.web.filter.RoseDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/context/spring/application-view.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>salkdemo-servlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>